<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.targus.ui.controllers.MainController">
    <top>
        <ToolBar prefHeight="24.0" prefWidth="1814.0" BorderPane.alignment="CENTER">
            <Separator prefWidth="20.0" />
            <Button onAction="#handleCreateProblemInstance">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/create.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Create instance" />
                </tooltip>
            </Button>
            <Separator prefWidth="20.0" />
            <Button onAction="#handleLoadFromFile">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/load.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Load from file" />
                </tooltip>
            </Button>
            <Separator prefWidth="20.0" />
            <Button onAction="#handleExportToFile">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/write.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Write to file" />
                </tooltip>
            </Button>
            <Separator prefWidth="20.0" />
            <Button onAction="#handleSolve">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/run.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Run" />
                </tooltip>
            </Button>
            <Separator prefWidth="20.0" />
            <Button onAction="#handleCleanSolution">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/clean.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Clean solution" />
                </tooltip>
            </Button>
            <Separator prefWidth="20.0" />
            <Button onAction="#handleObjectiveValueDisplay">
                <graphic>
                    <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../icons/clean.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Show fitness value" />
                </tooltip>
            </Button>
            <HBox alignment="CENTER_RIGHT">
                <CheckBox fx:id="sensingRangeVisibility" selected="true" text="Sensing Range" />
                <CheckBox fx:id="communicationRangeVisibility" layoutX="100" selected="true" text="Communication Range" />
            </HBox>
        </ToolBar>
    </top>
    <left>
        <fx:include fx:id="inputs" prefHeight="300.0" source="inputs.fxml" />
    </left>
    <center>
        <BorderPane>
            <center>
                <fx:include fx:id="map" prefHeight="300.0" prefWidth="400.0" source="map.fxml" />
            </center>
            <bottom>
                <fx:include fx:id="progressBar" source="progressBar.fxml" />
            </bottom>
        </BorderPane>
    </center>
    <bottom>
        <fx:include fx:id="simplifiedObjectiveValueDisplay" source="simplifiedObjectiveValueDisplay.fxml" />
    </bottom>
</BorderPane>
