<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
    </rowConstraints>
    <Label text="Width:" />
    <TextField fx:id="widthField" GridPane.columnIndex="1" />
    <Label text="Height:" GridPane.rowIndex="1" />
    <TextField fx:id="heightField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Connectivity (m):" GridPane.rowIndex="2" />
    <TextField fx:id="connectivityField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Coverage (k):" GridPane.rowIndex="3" />
    <TextField fx:id="coverageField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Communication radius:" GridPane.rowIndex="4" />
    <TextField fx:id="commRadiusField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Sensing radius:" GridPane.rowIndex="5" />
    <TextField fx:id="sensRadiusField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Generation count:" GridPane.rowIndex="6" />
    <TextField fx:id="genCountField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label text="Mutation rate:" GridPane.rowIndex="7" />
    <TextField fx:id="mutRateField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Button text="OK" onAction="#submit" GridPane.rowIndex="8" />
</GridPane>
