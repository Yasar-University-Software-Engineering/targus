<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.targus.ui.controllers.InputsController" alignment="CENTER" spacing="20.0">
    <HBox alignment="CENTER" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Connectivity (m)" />
        <TextField fx:id="txtM" alignment="CENTER" prefWidth="70.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Coverage (k)" />
        <TextField fx:id="txtK" alignment="CENTER" prefWidth="70.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Communication Range" />
        <TextField fx:id="txtCommunicationRange" alignment="CENTER" prefWidth="70.0" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Sensing Range" />
        <TextField fx:id="txtSensingRange" alignment="CENTER" prefWidth="70.0" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Generation Count" />
        <TextField fx:id="txtGenerationCount" alignment="CENTER" prefWidth="70.0" />
    </HBox>
    <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
        <Label alignment="CENTER_RIGHT" prefWidth="124.0" text="Mutation Rate" />
        <TextField fx:id="txtMutationRate" alignment="CENTER" prefWidth="70.0" />
    </HBox>
</VBox>
